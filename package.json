{
  "name": "modern-template",
  "version": "1.0.0",
  "description": "현대적인 웹 표준과 접근성을 고려한 HTML/CSS/JavaScript 템플릿",
  "scripts": {
    "check:contrast": "node scripts/check-contrast.js --out reports/contrast-report.json",
    "check:contrast:text": "node scripts/check-contrast.js --text --out reports/contrast-text.json",
    "check:contrast:nontext": "node scripts/check-contrast.js --nontext --out reports/contrast-nontext.json",
    "check:contrast:print": "node scripts/check-contrast.js",
    "a11y:e2e": "node scripts/a11y-e2e.js",
    "lint:a11y": "node scripts/lint-a11y.js",
    "build:css": "sass source/css/scss/main.scss source/css/main.css && sass source/css/scss/sub.scss source/css/sub.css",
    "watch:css": "sass --watch source/css/scss:source/css",
    "build": "npm run check:contrast && npm run lint:a11y && npm run build:css"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "axe-core": "^4.10.3",
    "playwright": "^1.52.0",
    "sass": "^1.97.3"
  }
}
